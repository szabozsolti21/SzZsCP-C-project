<Window x:Class="OrvosKliens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrvosKliens"
        mc:Ignorable="d"
        Title="Doctor's client" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Patients" Grid.Row="0" FontWeight="Bold" Margin="15, 15, 15, 0"></Label>

        <ListBox x:Name="PatientsListBox" Grid.Row="1" Margin="15" SelectionMode="Single" SelectionChanged="List_SelectionChanged"></ListBox>

        <Button Grid.Row="2" Content="Add Patient" Width="100" HorizontalAlignment="Right" Margin="15, 0, 15, 15" Click="AddPatient_Click"></Button>
        
    </Grid>
</Window>
